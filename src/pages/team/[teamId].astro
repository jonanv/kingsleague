---
import Layout from '@layouts/Layout.astro'
import Container from '@components/Container.astro'
import TeamSelectorCards from '@components/TeamSelectorCards.astro'
import TeamStats from '@components/TeamStats.astro';

import { getPresidentById } from '@services/presidents'

const ICON_NETWORKS_MAPING = [
	'instagram',
	'tiktok',
	'twitch',
	'twitter',
	'youtube'
];

export async function getStaticPaths() {
	const response = await fetch('https://kingsleague.jonanv.workers.dev/teams')
	const teams = await response.json()
	return teams.map((team) => ({
		params: { teamId: team.id },
		props: { ...team }
	}))
}
const { id, name, imageInverse, presidentId, socialNetworks, channel, players, color } = Astro.props

const socialNetworksWithIcon = socialNetworks.map(href => ({
	href,
	icon: ICON_NETWORKS_MAPING.find(key => href.includes(key))
}));

const president = await getPresidentById({ id: presidentId });
---

<Layout title={name}>
	<section class='bg-principal py-20'>

		<Container>
			<div class='relative bg-gradient-to-tr from-gray-600 to-gray-900 shadow-xl rounded p-20 -mt-10 z-10 mb-40'
				style={`--tw-gradient-from: ${color}`}>
				<section class='flex items-center justify-between pb-20'>

					<div class="flex flex-col items-center gap-y-6">
						<div class='flex items-center gap-x-6'>
							<img class='w-48 h-48' src={imageInverse} alt={`Escudo del equipo ${name}`} />
							<div class="flex flex-col gap-y-4">
								<h1 class='font-title font-bold text-5xl text-white'>{name}</h1>
								<ul class="flex flex-row gap-x-4">
									{
										socialNetworksWithIcon.map(({ href, icon }) => {
											return (
												<li>
													<a class="block transition hover:scale-150" href={href} target="_blank" rel="noopener norefferer">
														<img 
															class="w-8 h-8" 
															src={`/logos/social/${icon}.svg`}>
													</a>
												</li>
											)
										})
									}
								</ul>
							</div>
						</div>
						<TeamStats teamId={id} />
					</div>

					<div class="absolute -top-20 right-20 text-center">
						<img
							class='w-96 h-auto aspect-[170/239]'
							src={president.image}
							alt={president.name}
						/>
						<strong class="text-white text-xl font-bold font-title -mt-6 block">{ president.name }</strong>
					</div>

				</section>

				<section>
					<h2 class='font-title text-5xl text-white text-center py-10'>Jugadores</h2>
					<div class='grid grid-cols-4 gap-2'>
						{
							players.map(({ name, image, role }) => (
								<article class='text-center font-title text-slate-900 rounded-sm p-5 m-auto'>
									<img
										class='w-56 h-auto aspect-[170/239]'
										src={`https://kingsleague.jonanv.workers.dev/static/players/${image}`}
										alt={`${name}`}
									/>
									<h3 class="text-white font-title text-3xl">{name}</h3>
									<h4 class='font-body uppercase rounded-full text-orange-300 bg-black/70 py-1 font-semibold'>{role}</h4>
								</article>
							))
						}
					</div>
				</section>

				<div
					class={`-z-10 absolute inset-0 opacity-5 bg-center bg-[size:80%] transition bg-no-repeat`}
					style={`background-image:url('${imageInverse}')`}
				>
				</div>
			</div>
		</Container>

		<Container>
			<div class='overflow-hidden bg-white p-20 pt-5 shadow-xl rounded -mt-10 z-10 mb-40'
				style={`--tw-gradient-from: ${color}`}>
				<h2 class='font-title text-5xl text-black text-center py-10'>Todos los equipos</h2>
				<TeamSelectorCards />
			</div>
		</Container>

	</section>
</Layout>
