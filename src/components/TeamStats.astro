---
import { getLeaderboardBy } from '@services/leaderboard.js'

const { teamId } = Astro.props
const { rank, wins, losses, scoredGoals, concededGoals, yellowCards, redCards } = await getLeaderboardBy({ teamId })
const stats = [
	{
		title: 'Posici√≥n',
		value: rank
	},
	{
		title: 'Victorias',
		value: wins
	},
	{
		title: 'Derrotas',
		value: losses
	},
	{
		title: 'GF',
		value: scoredGoals
	},
	{
		title: 'GC',
		value: concededGoals
	},
	{
		title: 'T. Amarillas',
		value: yellowCards
	},
	{
		title: 'T. Rojas',
		value: redCards
	}
]
---

<section class='bg-black p-4 rounded-lg grid grid-cols-3 w-full gap-x-2'>
	{
		stats.map((stat) => (
			<div class='flex flex-col justify-between items-start mb-2'>
				<h4 class='text-yellow-400 uppercase font-bold font-title'>{ stat.title }</h4>
				<strong class='text-6xl font-title text-white font-bold'>{ stat.value }</strong>
			</div>
		))
	}
</section>
