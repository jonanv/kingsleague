---
const { title, players } = Astro.props;
---

<section>
	<h2 class='font-title text-5xl text-white text-center py-10'>{ title }</h2>
	<div class='grid grid-cols-4 gap-2'>
		{
			players.map(({ name, image, role }) => (
				<article class='text-center relative font-title text-slate-900 rounded-sm p-5 m-auto'>
					<img class='w-56 h-auto aspect-[170/239]'
						src={`https://kingsleague.jonanv.workers.dev/static/players/${image}`}
						alt={`${name}`}
						decoding="async"
						fetchpriority="high" />
					<h3 class='text-white font-title text-3xl pt-2'>{name}</h3>
					<h4 class='font-body uppercase rounded-full text-orange-500 bg-black/70 py-1 font-semibold'>
						{role}
					</h4>
				</article>
			))
		}
	</div>
</section>
