---
import Container from './Container.astro'
import kingsLeagueInfojobs from '../../assets/static/logos/kings-league-infojobs.svg'
import instagram from '../logos/social/instagram.svg'
import tiktok from '../logos/social/tiktok.svg'
import twitch from '../logos/social/twitch.svg'
import twitter from '../logos/social/twitter.svg'
import youtube from '../logos/social/youtube.svg'

const SOCIAL_NETWORKS = [
	{
		name: 'twitch',
		icon: twitch,
		href: 'https://www.twitch.tv/kingsleague'
	},
	{
		name: 'twitter',
		icon: twitter,
		href: 'https://twitter.com/kingsleague'
	},
	{
		name: 'tiktok',
		icon: tiktok,
		href: 'https://www.tiktok.com/@kingsleague'
	},
	{
		name: 'instagram',
		icon: instagram,
		href: 'https://www.instagram.com/kingsleague/'
	},
	{
		name: 'youtube',
		icon: youtube,
		href: 'https://www.youtube.com/@KingsLeagueOfficial'
	}
]

const NAV_ENTRIES = [
	{
		name: 'Equipos',
		href: '/equipos'
	},
	{
		name: 'Jugador 12',
		href: '/jugador-12'
	},
	{
		name: 'Calendario',
		href: '/calendario'
	},
	{
		name: 'Estadisticas',
		href: '/estadisticas'
	},
	{
		name: 'Reglamento',
		href: '/reglamento'
	},
	{
		name: 'Faqs',
		href: '/faqs'
	},
	{
		name: 'Draft',
		href: '/draft'
	}
]
---

<footer class='text-white w-full p-8 bg-black'>
	<Container>
		<section
			class='flex flex-wrap justify-center text-center md:text-left lg:flex-row md:justify-between gap-14 lg:gap-4 text-sm text-lig my-10'
		>
			<img
				class='block w-52'
				src={kingsLeagueInfojobs}
				alt='logo de Kings League y Infojobs'
				loading='lazy'
				decoding='async'
				fetchpriority='low'
			/>

			<nav class='flex-col lg:grid lg:grid-cols-3 gap-4 lg:gap-0 lg:justify-between lg:gap-x-16 lg:gap-y-4
			'>
				{
					NAV_ENTRIES.map((entry) => (
						<a href={entry.href} class='flex items-center hover:underline'>
							{entry.name}
						</a>
					))
				}
			</nav>
		</section>

		<section class='flex flex-col lg:flex-row text-center lg:text-left gap-14 lg:gap-4 text-sm text-lig my-10'>
			<nav class='flex flex-col lg:flex-row gap-12 md:gap-4 justify-between w-full align-middle items-center'>
				<div class='flex gap-4'>
					{
						SOCIAL_NETWORKS.map((network) => (
							<a href={network.href}
								target='_blank'
								rel='noopener norefferer'
								class='w-10 h-10 flex items-center rounded-full p-2 bg-white group'>
								<img class='w-6 transition-brightness duration-300 brightness-0 group-hover:brightness-100'
									src={network.icon}
									alt={`${network.name} Logo`}
									loading='lazy'
									decoding='async'
									fetchpriority='low'/>
							</a>
						))
					}
				</div>

				<nav class='flex gap-5 justify-center lg:justify-around'>
					<span>Contacto</span>
					<span>Política de Privacidad</span>
					<span>Aviso Legal</span>
					<span>Política de Cookies</span>
				</nav>
			</nav>
		</section>
	</Container>
</footer>
